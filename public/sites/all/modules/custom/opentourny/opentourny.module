    $output .= '<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-553fcfdc2e71afb5" async="async"></script>';
 }
 return $output;
}

function theme_facebook_pixel($variables){
   $output = '';
